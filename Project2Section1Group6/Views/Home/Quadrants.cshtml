                }
            }
        </div>
    </div>
    <div class="row border">
        <div class="col-2 border font-weight-bold">Not Important</div>
        <div class="col-5 border">
            <span class="font-weight-bold p-3">Quadrant 3</span>
            @foreach (var x in Model)
            {
                @if (x.Completed) { }
                else if (x.QuadrantNumber == 3)
                {
                    <div>@x.TaskTitle <span class="float-right"><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskID">Edit</a>&ensp;<a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskID">Delete</a></span></div>
                }
            }
        </div>
        <div class="col-5 border">
            <span class="font-weight-bold p-3">Quadrant 4</span>
            @foreach (var x in Model)
            {
                @if (x.Completed) { }
                else if (x.QuadrantNumber == 4)
                {
